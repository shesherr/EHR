@model EHR.Models.Patient

@{
    ViewData["Title"] = "Patient Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #dfe9f3);
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 16px;
        }

        .card-header {
            background: linear-gradient(90deg, #6610f2, #0d6efd);
            color: white;
            border-radius: 16px 16px 0 0;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-custom {
            background: linear-gradient(90deg, #6610f2, #0d6efd);
            border: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: linear-gradient(90deg, #0d6efd, #6610f2);
                transform: translateY(-2px);
            }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e0e0e0;
        }
    </style>
</head>

<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3 class="mb-0">🧍‍♂️ Patient Registration Form</h3>
                        <p class="mb-0 text-light fs-6">Add new patient details below</p>
                    </div>

                    <div class="card-body px-4 py-4">

                        <form asp-action="Patient" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DateOfBirth" class="form-label">Date of Birth</label>
                                <input asp-for="DateOfBirth" type="date" class="form-control" />
                                <span asp-validation-for="DateOfBirth" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Gender</label>
                                <select name="Gender" class="form-select">
                                    <option value="">-- Select Gender --</option>
                                    <option>Male</option>
                                    <option>Female</option>
                                    <option>Other</option>
                                </select>
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Address</label>
                                <input name="Address" class="form-control" placeholder="Enter address" />
                            </div>

                            <div class="mb-3">
                                <label class="form-label">Phone Number</label>
                                <input name="PhoneNumber" type="tel" class="form-control" placeholder="Enter contact number" />
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-custom btn-lg">
                                    Save Patient
                                </button>
                            </div>
                        </form>

                    </div>

                    <div class="card-footer text-center">
                        <a href="/Home/Index" class="btn btn-outline-secondary btn-sm mt-2">
                            Back to Home
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
