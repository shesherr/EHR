@model EHR.Models.User

@{
    ViewData["Title"] = "User Registration";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #dfe9f3);
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 16px;
        }

        .card-header {
            background: linear-gradient(90deg, #0dcaf0, #0d6efd);
            color: white;
            border-radius: 16px 16px 0 0;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-custom {
            background: linear-gradient(90deg, #0dcaf0, #0d6efd);
            border: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: linear-gradient(90deg, #0d6efd, #0dcaf0);
                transform: translateY(-2px);
            }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e0e0e0;
        }
    </style>
</head>

<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3 class="mb-0">👤 User Registration</h3>
                        <p class="mb-0 text-light fs-6">Create a new system user account</p>
                    </div>

                    <div class="card-body px-4 py-4">

                        <form asp-action="User" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" placeholder="Enter first name" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" placeholder="Enter last name" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Email" class="form-label">Email Address</label>
                                <input asp-for="Email" type="email" class="form-control" placeholder="Enter email" />
                                <span asp-validation-for="Email" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Password" class="form-label">Password</label>
                                <input asp-for="Password" type="password" class="form-control" placeholder="Enter password" />
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Role" class="form-label">User Role</label>
                                <select asp-for="Role" class="form-select">
                                    <option value="">-- Select Role --</option>
                                    <option>Admin</option>
                                    <option>Doctor</option>
                                    <option>Receptionist</option>
                                    <option>Patient</option>
                                </select>
                                <span asp-validation-for="Role" class="text-danger"></span>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-custom btn-lg">
                                    Register User
                                </button>
                            </div>
                        </form>

                    </div>

                    <div class="card-footer text-center">
                        <a href="/Home/Index" class="btn btn-outline-secondary btn-sm mt-2">
                            Back to Home
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
