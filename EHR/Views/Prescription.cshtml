@model EHR.Models.Prescription

@{
    ViewData["Title"] = "Prescription Entry";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <!-- ✅ Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
          rel="stylesheet"
          crossorigin="anonymous">

    <style>
        body {
            background: linear-gradient(135deg, #f8f9fa, #e3f2fd);
            font-family: 'Segoe UI', sans-serif;
        }

        .card {
            border-radius: 16px;
        }

        .card-header {
            background: linear-gradient(90deg, #0d6efd, #198754);
            color: white;
            border-radius: 16px 16px 0 0;
            text-align: center;
        }

        .form-label {
            font-weight: 600;
            color: #333;
        }

        .btn-custom {
            background: linear-gradient(90deg, #198754, #0d6efd);
            border: none;
            font-weight: 600;
            transition: 0.3s;
        }

            .btn-custom:hover {
                background: linear-gradient(90deg, #0d6efd, #198754);
                transform: translateY(-2px);
            }

        .card-footer {
            background-color: #f8f9fa;
            border-top: 1px solid #e0e0e0;
        }
    </style>
</head>

<body>

    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-6 col-md-8">

                <div class="card shadow-lg">
                    <div class="card-header">
                        <h3 class="mb-0">💊 Prescription Form</h3>
                        <p class="mb-0 text-light fs-6">Add a new patient prescription</p>
                    </div>

                    <div class="card-body px-4 py-4">

                        <form asp-action="Prescription" method="post" novalidate>
                            <div asp-validation-summary="ModelOnly" class="alert alert-danger"></div>

                            <div class="mb-3">
                                <label asp-for="PatientId" class="form-label">Patient ID</label>
                                <input asp-for="PatientId" type="number" class="form-control" placeholder="Enter patient ID" />
                                <span asp-validation-for="PatientId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="DoctorId" class="form-label">Doctor ID</label>
                                <input asp-for="DoctorId" type="number" class="form-control" placeholder="Enter doctor ID" />
                                <span asp-validation-for="DoctorId" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Medication" class="form-label">Medication</label>
                                <input asp-for="Medication" class="form-control" placeholder="Enter prescribed medicine" />
                                <span asp-validation-for="Medication" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Dosage" class="form-label">Dosage Instructions</label>
                                <textarea asp-for="Dosage" class="form-control" rows="3" placeholder="Enter dosage details"></textarea>
                                <span asp-validation-for="Dosage" class="text-danger"></span>
                            </div>

                            <div class="d-grid mt-4">
                                <button type="submit" class="btn btn-custom btn-lg">
                                    Save Prescription
                                </button>
                            </div>
                        </form>

                    </div>

                    <div class="card-footer text-center">
                        <a href="/Home/Index" class="btn btn-outline-secondary btn-sm mt-2">
                            Back to Home
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>

    <!-- ✅ Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
            crossorigin="anonymous"></script>

    @section Scripts {
        <partial name="_ValidationScriptsPartial" />
    }

</body>
</html>
